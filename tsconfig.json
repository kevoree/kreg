{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "removeComments": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "built"
  },
  "exclude": [
    "node_modules",
    "typings/browser",
    "typings/browser.d.ts"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "typings/main.d.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "src/main/action/auth.ts",
    "src/main/action/index.ts",
    "src/main/action/publish.ts",
    "src/main/action/searchDeployUnit.ts",
    "src/main/action/searchTypedef.ts",
    "src/main/action/whoami.ts",
    "src/main/kreg.ts",
    "src/main/lib/logger.ts",
    "src/main/lib/verifyAuth.ts",
    "typings/main.d.ts"
  ]
}
